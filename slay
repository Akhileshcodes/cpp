void modify()
{
int yu;
 clrscr();
 fstream file;
 file.open("text10.txt",ios::in|ios::out|ios::binary);
 cout<<"ENTER CUSTOMER NAME;TO BE MODIFIED";
 cout<<"\n";
 gets(mod);
 cout<<"\n";

 while(file.read((char*)&obj,sizeof(obj)))
   { if(strcmp(mod,obj.fname)==0)

     { cout<<"ENTER NEW DATA";
       obj.accept();
       int pos=-1*sizeof(obj);
       file.seekg(pos,ios::cur);
       file.write((char*)&obj,sizeof(obj));

       cout<<"\n";
       cout<<"\n";
       cout<<"CONGRATULATIONS YOU HAVE SUCCESSFULLY UPDATED CUSTOMER DETAILS";
       cout<<"\n";
       cout<<"press enter to go back";
       getch();
       file.close();
       void adminfunc();
       adminfunc();


      }
      else
      {
    cout<<"CUSTOMER NOT FOUND";
    cout<<"\n";
    cout<<"choose one of the following";
    cout<<"\n";
    cout<<"1.TO ENTER AGAIN         2.GO BACK";
    cout<<"\n";
    cin>>yu;
    if(yu==1)
    {
    file.close();
    void modify();
    modify();
    }

    if(yu==2)
    { file.close();
     void adminfunc();
     adminfunc(); }


      }

   }

  file.close();
}

