class user
{
 int userage;
 char username[30];
 char useraddress[30];
 char userphno[10];
 public:
 void display_user_details()  //display's user details
 {
  cout<<"NAME:";puts(username);
  cout<<"AGE:"<<userage;cout<<endl;
  cout<<"ADDRESS:";puts(useraddress);
  cout<<"PHONE NO:"<<userphno<<endl<<endl;
 }
 void accept_user_details()  //accept's user details
 {
  cout<<"enter user name"<<endl;
  gets(username);
  cout<<"enter user age"<<endl;
  cin>>userage;
  cout<<"enter user phone number"<<endl;
  gets(userphno);
  cout<<"enter user address"<<endl;
  gets(useraddress);userflag++;
 }

 char* ret()  //returns user name
 {return (username);}

}obj4;
class ride
{

 int ridecode;
 char ridename[30];
 float rideprice;
 char ridetype[10];
 public:
void dis()
{
cout<<"\n";
//cout<<"      "<<ridename      <<"          " <<ridecode<<"            "<<rideprice<<"         "<<ridetype;
cout<<"RIDE NAME : ";
cout<<ridename;
cout<<"\n";
cout<<"RIDE CODE : ";
cout<<ridecode;
cout<<"\n";
cout<<"RIDE PRICE: ";
cout<<rideprice;
cout<<"\n";
cout<<"RIDE TYPE : ";
cout<<ridetype;
cout<<"\n";
}
////////////////////////////////////////////////////////////////////////////////////////
void dashing()
  {
   ridecode=100;
   strcpy(ridename,"DASHING CARS");
   rideprice=150;
   strcpy(ridetype,"LAND");
  }
////////////////////////////////////////////////////////////////////////////////////////
  void pirate()
   {
    ridecode=101;
    strcpy(ridename,"PIRATES OF CARRIBEAN");
    rideprice=200;
    strcpy(ridetype,"LAND");
   }
///////////////////////////////////////////////////////////////////////////////////////
  void mindsplit()
   {
    ridecode=102;
    strcpy(ridename,"MINDSPLIT");
    rideprice=250;
    strcpy(ridetype,"LAND");
   }
//////////////////////////////////////////////////////////////////////////////////////
  void lagoon()
   {
    ridecode=103;
    strcpy(ridename,"WATER LAGOON");
    rideprice=150;
    strcpy(ridetype,"WATER");
   }
//////////////////////////////////////////////////////////////////////////////////////
  void splash()
   {
    ridecode=104;
    strcpy(ridename,"SPLASH MOUNTAIN");
    rideprice=200;
    strcpy(ridetype,"WATER");
   }
//////////////////////////////////////////////////////////////////////////////////////
  void splitter()
   {
    ridecode=105;
    strcpy(ridename,"WAVE SPLITTER");
    rideprice=250;
    strcpy(ridetype,"WATER");
   }
//////////////////////////////////////////////////////////////////////////////////////
  void equinox()
   {
    ridecode=106;
    strcpy(ridename,"EQUINOX");
    rideprice=150;
    strcpy(ridetype,"HIGH THRILL");
   }
//////////////////////////////////////////////////////////////////////////////////////
  void manta()
   {
    ridecode=107;
    strcpy(ridename,"MANTA");
    rideprice=200;
    strcpy(ridetype,"HIGH THRILL");
   }
//////////////////////////////////////////////////////////////////////////////////////
  void hulk()
   {
    ridecode=108;
    strcpy(ridename,"HULK COASTER");
    rideprice=250;
    strcpy(ridetype,"HIGH THRILL");
   }
//////////////////////////////////////////////////////////////////////////////////////
  int ret()  //returns ride code
 {return ridecode;}

}obj3;
//-----------------------------------------
void delete3()     //deletes ride details
{
  int rcode;
  clrscr();
  disp();
  cout<<"\n";
  cout<<"ENTER RIDE CODE"<<endl;
  cout<<"\n";
  cin>>rcode;
  if (rcode==100 ||rcode==103 || rcode==106)
  {rideprice=rideprice-150;}
  if (rcode==101 || rcode==104||rcode==107)
  {rideprice=rideprice-200;}
  if (rcode==102 || rcode==104||rcode==108)
  {rideprice=rideprice-250;}
  cout<<"\n";

    ifstream inFile1;
    inFile1.open("booking.txt", ios::binary|ios::in);

    ofstream outFile1;
    outFile1.open("temp1.txt", ios::out | ios::binary);

      while(inFile1.read((char*)&obj3,sizeof(obj3)))
     {
        if(rcode!=obj3.ret())
           {
            outFile1.write((char*)&obj3, sizeof(obj3));
           }
        if(rcode==obj3.ret())
       fileflag=0;

     }

    inFile1.close();
    outFile1.close();

    remove("booking.txt");
    rename("temp1.txt", "booking.txt");
    getch();
    if(fileflag==0)
    {
     cout<<"BOOKING DELETED";
     cout<<"\n";
     getch();

    }
    else if(fileflag==1)
    {
     cout<<"RECORD NOT FOUND!"<<endl;
     cout<<"ENTER 0 TO ENTER AGAIN";
     getch();

    }
}
