void main3()  // offer function used for special offers based on number of people and category.

{
yflag++;
clrscr();
loop3:
textcolor(6);
clrscr();
disp();
cout<<"************************************* OFFERS ***********************************";
cout<<"\n";
cout<<"WE IN WONDERLAND OFFER YOU A VARIETY OF PACAGES AND OFFERS THAT YOU CAN AWAIL   ";
cout<<"TO AVAIL ANY OF THE BELOW PACKAGE OR OFFER TYPE THEIR CORRESPONDING NUMBERS     ";
cout<<"--------------------------------------------------------------------------------";
cout<<"********************************************************************************";
cout<<"1.COLLEGE STUDENT OFFER                    WONDERLAND OFFERS A 20% DISCOUNT     ";
cout<<"                                           ON PARK ADMISSION TO COLLEGE STUDENTS";
cout<<"********************************************************************************";
cout<<"2.SCHOOL STUDENT OFFER                     WE LOVE CHILDREN SO WE OFFER A 35%   ";
cout<<"                                           DISCOUNT ON PARK ADMISSION.          ";
cout<<"********************************************************************************";
cout<<"3.GROUP PACKAGE                            WE ALSO HAVE A DISCOUNT FOR PEOPLE   ";
cout<<"                                           WHO COME IN GROUP(MORE THAN 10)      ";
cout<<"                                           THEN THERE IS 15% DISCOUNT FOR       ";
cout<<"                                           EACH.                                ";
cout<<"4.GO BACK                                                                       ";
cout<<"********************************************************************************";
cout<<"ENTER YOUR CHOICE->  ";

cin>>offer;
if(offer<1||offer>4)
 {        cout<<"ERROR**##<<!>>,PLEASE ENTER A VALID NUMBER.";
      getch();
      main3();
 }
switch(offer)
{ case 1: college();
      money=money-((20*money)/100);
      break;
  case 2: school();
      money=money-((35*money)/100);
      break;
  case 3: group();
      money=money-((15*money)/100);
      break;
  case 4: void home();
      home();
      break;

}
getch();
}
