void calcroom1()
{ roomcost=(218)*(60)*(obj.noofdays)*(obj.rooms);
//  if(counter>0)
 // { roomcost=roomcost-((5*roomcost)/100);    }
  cout<<"          THE TOTAL COST FOR THE ROOM YOU HAVE BOOKED IS="<<roomcost;
  cout<<"\n";
  cout<<"                                                      (AFTER DISCOUNT)";
  cout<<"\n";
  price=roomcost+price;
}
