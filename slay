cout<<"ENTER NO OF TICKETS REQIRED                          ENTER 0 TO GO BACK         ";
cout<<"********************************************************************************";
cin>>tic1;
if(tic1==0)
{  void main3();
    main3(); }
else
{
    for(i=0;i<tic1;i++)
    {
     obj1[i].accept() ;

    }



        cout<<"\n";
        cout<<"          YOU CAN REVIEW YOUR DISCOUNT IN YOUR CART";
        cout<<"\n";

        cout<<"\n"<<"              PRESS O TO GO BACK";
        cout<<"\n";
        rideprice=rideprice*tic1;
        rideprice=rideprice-((rideprice*20)/100);
        getch();
        void home();
        home();
}

}

