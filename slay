class Gen
{ public:
   char name[20];
   char colname[30];
   int agee;
  void accept()
  { cout<<"\n";
    cout<<"ENTER NAME"<<"\t";
    gets(name);
    cout<<"ENTER AGE"<<"\t";
    cin>>agee;
    cout<<"ENTER INSTITUTION'S NAME"<<"\t";
    gets(colname);
    cout<<"\n";
  }
  void displaydet()
  {  cout<<"NAME = "<<puts(name);
     cout<<"\n";
     cout<<"AGE  = "<<agee;
     cout<<"\n";
     cout<<"NAME OF COLLEGE = "<<puts(colname);
  }
}obj1[10],obj5;
