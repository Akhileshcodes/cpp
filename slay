//************************************************************************
//function to delete the contents in the file;

void delete1()
{
clrscr();
disp();
cout<<"\n";
char mod[10];
 cout<<"ENTER CUSTOMER NAME;TO BE DELETED";
 cout<<"\n";
 gets(mod);
 cout<<"\n";

    ifstream inFile;
    inFile.open("text10.txt", ios::binary);

    ofstream outFile;
    outFile.open("temp.txt", ios::out | ios::binary);

    while(inFile.read((char*)&obj,sizeof(obj)))
   {
        if(strcmp(mod,obj.fname)!=0)
           {

       outFile.write((char*)&obj, sizeof(obj));
           }

  }

    inFile.close();
    outFile.close();

    remove("text10.txt");
    rename("temp.txt", "text10.txt");
getch();
cout<<"CUSTOMER RECORD DELETED";
cout<<"\n";
getch();
void adminfunc();
adminfunc();
}

//************************************************************************
void display()//function used to display all the contents written into the file.

{

  clrscr();
  disp();
  fstream infile;
  int ffg=1;
  infile.open("text10.txt",ios::binary|ios::in);
 while(infile.read((char*)&obj,sizeof(obj)))
  {cout<<"\n";
  cout<<"CUSTOMER"<<ffg<<":-"<<"\n";
  obj.roomdisplay();
  ffg++;
  }
  infile.close();
  //diss();

}

