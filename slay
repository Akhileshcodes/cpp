void delete2()     //deletes user details
{

clrscr();
disp();
cout<<"\n";
char mod[10];

 cout<<"ENTER CUSTOMER NAME TO BE DELETED";
 cout<<"\n";
 gets(mod);
 cout<<"\n";

    fileflag = 1;               //correction

    ifstream inFile;
    inFile.open("user.txt", ios::binary | ios::in);

    ofstream outFile;
    outFile.open("temp1.txt", ios::out | ios::binary);

    while(inFile.read((char*)&obj4,sizeof(obj4)))
   {
        if(strcmp(mod,obj4.ret())!=0)
           {
        outFile.write((char*)&obj4, sizeof(obj4));
           }
        if(strcmp(mod,obj4.ret())==0)
        fileflag=0;
   }

remove("user.txt");
rename("temp1.txt","user.txt");
inFile.close();
outFile.close();

if(fileflag==0)
{
cout<<"USER DETAILS DELETED";
cout<<"\n";
getch();
void adminfunc();
adminfunc();
}
if(fileflag==1)
{cout<<"RECORD NOT FOUND."<<endl;}
getch();
void adminfunc();
adminfunc();
}
/////////////////////////////////////////////////////////////
void modify1()   //to modify user details
{
 clrscr();
 fstream file;
 char mod[20];
 file.open("user.txt",ios::in|ios::out|ios::binary);
 cout<<"ENTER CUSTOMER NAME TO BE MODIFIED";
 cout<<"\n";
 gets(mod);
 cout<<"\n";

 while(file.read((char*)&obj4,sizeof(obj4)))
   { if(strcmp(mod,obj4.ret())==0)

     { cout<<"ENTER NEW DATA";
       clrscr();disp();
       obj4.accept_user_details();
       int pos=-1*sizeof(obj4);
       file.seekg(pos,ios::cur);
       file.write((char*)&obj4,sizeof(obj4));
       fileflag=0;break;

     }
   }
       file.close();
       if(fileflag==0)
       {
    cout<<"\n";
    cout<<"\n";
    cout<<"CONGRATULATIONS YOU HAVE SUCCESSFULLY UPDATED CUSTOMER DETAILS";
    cout<<"\n";
    cout<<"press enter to go back";
    getch();
    void adminfunc();
    adminfunc();
       }
       if(fileflag==1)
      { cout<<"RECORD NOT FOUND"<<endl;}
       cout<<"ENTER 0 TO TRY AGAIN";
       getch();
       void adminfunc();
       adminfunc();


}

