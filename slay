class book
{

 public:
 int age;
 char fname[30];
 char sname[30];
 char address[40];
 int rooms;
 int noofdays;
 int phnumber;
 void accept()
 {cout<<"PLEASE ENTER ONLY VALID DETAILS";
  cout<<"\n";
  cout<<"ENTER YOUR FIRST NAME"<<"\t";
  gets(fname);
  cout<<"ENTER YOUR SECOND NAME"<<"\t";
  gets(sname);
  cout<<"ENTER YOUR AGE"<<"\t";
  cin>>age;
  cout<<"ENTER YOUR PERMANENET ADDRESS"<<"\t";
  gets(address);
  cout<<"ENTER NO OF ROOMS"<<"\t";
  cin>>rooms;
  cout<<"ENTER NO OF DAYS OF STAY"<<"\t";
  cin>>noofdays;
  cout<<"ENTER YOUR MOBILE NUMBER"<<"\t";
  cin>>phnumber;
 }
 void roomdisplay()

 {
  cout<<"             ";
  cout<<"FIRST NAME :- ";
  puts(fname);
  cout<<"             ";
  cout<<"SECOND NAME:- ";
  puts(sname);
  cout<<"             ";
  cout<<"AGE        :-  "<<age;
  cout<<"\n";
  cout<<"             ";
  cout<<"ADDRESS    :- ";
  puts(address);
  cout<<"             ";
  cout<<"ROOMS      :- "<<rooms;
  cout<<"\n";
  cout<<"             ";
  cout<<"NO OF DAYS :- "<<noofdays;
  cout<<"\n";
  cout<<"             ";
  cout<<"MOBILE NO  :- "<<phnumber;
  cout<<"\n";
}


}obj;
